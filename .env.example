# LGPD Compliance Platform - Environment Configuration
# Copy this file to .env and update with your production values

# =============================================================================
# SECURITY CONFIGURATION (CRITICAL - CHANGE IN PRODUCTION)
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database file path (relative to project root)
DATABASE_PATH=lgpd_compliance.db

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Node environment
NODE_ENV=development

# Application port (default: 3000)
PORT=3000

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================

# Enable HTTPS in production
HTTPS_ENABLED=false

# Trust proxy for load balancers
TRUST_PROXY=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable security audit logging
SECURITY_AUDIT_LOGGING=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limiting window (in minutes)
RATE_LIMIT_WINDOW=15

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# PIX INTEGRATION (FUTURE)
# =============================================================================

# PIX API endpoint
PIX_API_URL=https://api.pix.example.com

# PIX API key
PIX_API_KEY=your-pix-api-key

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Enable application monitoring
ENABLE_MONITORING=false

# Monitoring endpoint
MONITORING_ENDPOINT=https://monitoring.example.com

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Database backup frequency (in hours)
BACKUP_FREQUENCY=24

# Backup retention days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable debug mode (development only)
DEBUG=false

# Mock PIX verification (development only)
MOCK_PIX_VERIFICATION=true
